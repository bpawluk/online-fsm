<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" type="text/css">
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="navbar">
        <a asp-controller="App" asp-action="Intro">
            <img class="site-logo" src="~/images/logo.png"></img><div class="site-title"><p class="desktop-only">FSM Simulator</p></div>
        </a>
        @RenderSection("NavbarContent", required: false)
    </div>
    <div class="content">@RenderBody()</div>
    @RenderSection("Scripts", required: false)
</body>
</html>