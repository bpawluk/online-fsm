<div class="workspace-wrapper">
    <div class="message-wrapper"><p id="workspace-message"></p></div>
    <div id="workspace"></div>
    <div id="input-wrapper"></div>
    <div class="workspace-footer">
        <div class="dock">
            <button id="start" class="dock-item"><i class="material-icons">fast_rewind</i><p class="desktop-only inline-block">Reset</p></button>
            <button id="back" class="dock-item"><i class="material-icons">skip_previous</i><p class="desktop-only inline-block">Prev</p></button>
            <button id="restart" class="dock-item"><i class="material-icons">input</i><p class="desktop-only inline-block">Set input</p></button>
            <button id="forward" class="dock-item"><i class="material-icons">skip_next</i><p class="desktop-only inline-block">Next</p></button>
            <button id="end" class="dock-item"><i class="material-icons">fast_forward</i><p class="desktop-only inline-block">Read all</p></button>
        </div>
    </div>
</div>
@section NavbarContent {
    <div class="top-panel">
        <button id="new" class="top-button">New</button>
        <button id="save" class="top-button">Save</button>
        <button id="load" class="top-button">Load</button>
        <button id="design" class="top-button">Edit</button>
    </div>
}
@section Styles {
<link href="~/css/simulator.css" rel="stylesheet" type="text/css">
}
@section Scripts{
<environment include="Development">
    <script type="module" src="~/simulator.js"></script>
    <script type="module" src="~/common-utils.js"></script>
    <script type="module" src="~/core-utils.js"></script>
    <script type="module" src="~/sandbox.js"></script>
    <script type="module" src="~/core.js"></script>
    <script type="module" src="~/modules/canvas.js"></script>
    <script type="module" src="~/modules/dom-manager.js"></script>
    <script type="module" src="~/modules/interaction.js"></script>
    <script type="module" src="~/modules/workspace.js"></script>
    <script type="module" src="~/modules/workspace-scaler.js"></script>
    <script type="module" src="~/modules/fsm-loader.js"></script>
    <script type="module" src="~/modules/fsm-cache-manager.js"></script>
    <script type="module" src="~/modules/fsm-simulator.js"></script>
    <script type="module" src="~/modules/input-presenter.js"></script>
    <script type="module" src="~/shapes/shape.js"></script>
    <script type="module" src="~/shapes/basic-shapes.js"></script>
    <script type="module" src="~/shapes/state-shape.js"></script>
